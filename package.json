{
  "name": "master-thesis",
  "main": "src/index.ts",
  "scripts": {
    "start": "bun run sonar:up && bun run src/index.ts",
    "migrate": "bun run src/db/migrate.ts",
    "generate": "bunx drizzle-kit generate --dialect sqlite --schema ./src/db/schema.ts",
    "studio": "bunx drizzle-kit studio",
    "sonar:up": "docker-compose up -d",
    "sonar:down": "docker-compose down",
    "sonar:logs": "docker-compose logs -f sonarqube"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "drizzle-orm": "^0.44.5"
  }
}
